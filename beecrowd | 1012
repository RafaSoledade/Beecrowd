import java.io.IOException;
import java.util.Scanner;
public class Main {

    public static void main(String[] args) throws IOException {
        Scanner sc = new Scanner(System.in);

        //Entrada de dados
        double A = sc.nextDouble();
        double B = sc.nextDouble();
        double C = sc.nextDouble();

        //Área Triangulo retangulo
        double trianguloRetangulo = (A * C) / 2;
        System.out.printf("TRIANGULO: %.3f%n", trianguloRetangulo);

        //Área do circulo de raio C
        double pi = 3.14159;
        double areaCirculo = pi * Math.pow(C, 2);
        System.out.printf("CIRCULO: %.3f%n", areaCirculo);

        //Área do trápezio que tem A e B por bases e C por altura
        double areaTrapezio = (A + B) * C / 2;
        System.out.printf("TRAPEZIO: %.3f%n", areaTrapezio);

        //Área do quadrado que tem lado B

        double areaQuadrado = Math.pow(B, 2);
        System.out.printf("QUADRADO: %.3f%n", areaQuadrado);

        //Área do retangulo que tem lado A e B

        double areaRetangulo = A * B;
        System.out.printf("RETANGULO: %.3f%n", areaRetangulo);
    }

}
