import java.util.Scanner;

public class Main{
    
    public static void main(String []args ){
        Scanner entrada = new Scanner (System.in);
        
        int n = entrada.nextInt();
        int horas = 0;
        int minutos = 0;
        int segundos = 0;
        int restante ;
        
    
        horas = n/3600;
        restante = n % 3600;
        minutos = restante / 60;
        segundos = restante % 60;
            
        
        
        System.out.println(horas + ":" + minutos + ":" + segundos);

    }
    
}
